extends ../../layout

block content
  .main.container
    .row  
      .col-md-6.col-md-offset-3.bottom
        h1.display-4.m-b-2 New User
        form(method='POST' action='/admin/users')
          div.form-group
            label(for='name') Name 
            input.form-control(type='text' id='name' placeholder='name' name='name')
          div.form-group
            label(for='email') Email 
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='username') User Name 
            input.form-control(type='text' id='username' placeholder='user name' name='username')
          div.form-group
            label(for='password') Password
            input.form-control(type='text' id='password' placeholder='password' name='password')
          div.form-group
            lable(for='teams') Teams
            select.form-control(id="teams", name="teams", required)
              each val in teams
                option(value=val.id)= val.name
          div.form-group
            lable(for='roles') Roles
            select.form-control(id="roles", name="roles" required)
              each val in roles
                option(value=val.id)= val.name
          button.btn.btn-primary(type='submit') Log in 